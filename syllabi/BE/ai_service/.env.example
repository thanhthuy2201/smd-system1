# SMD AI Service Configuration

# Application
APP_NAME=SMD AI Service
APP_VERSION=1.0.0
DEBUG=true
API_PREFIX=/api/v1

# Core API Connection
CORE_API_URL=http://localhost:8000
CORE_API_KEY=

# Database - PostgreSQL with pgvector
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smd_ai

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=smd_

# AI Models - Local (Embeddings)
LOCAL_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
VIETNAMESE_NLP_MODEL=vinai/phobert-base-v2

# AI Models - Cloud (Summarization)
# Priority order: gemini, openai, ollama
AI_PROVIDER_PRIORITY=gemini,openai,ollama

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini

# Google Gemini
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-flash

# Ollama (Local LLM fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Vector Store
EMBEDDING_DIMENSION=384
SIMILARITY_THRESHOLD=0.75

# Crawler
CRAWLER_USER_AGENT=SMD-Crawler/1.0 (Educational Purpose)
CRAWLER_TIMEOUT=30
CRAWLER_MAX_PAGES=10

# Task Settings
TASK_TIMEOUT=300
MAX_RETRIES=3
